<!-- form_for creates a new form-->
<%= form_for @article do |f| %>
<!-- detects any errors in the article class -->
  <% if @article.errors.any? %>
  <div id="error_explaination">
    <h2>
      <!-- method changes singles to plurals -->
      <%= pluralize(@article.errors.count, "error") %>
      Prohibited
          this article from being saved:
    </h2>
    <ul>
      <!-- Loop through the errors and display them as a list -->
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>



  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
